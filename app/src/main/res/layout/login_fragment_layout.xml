<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:background="@color/bg_gray"
    android:orientation="vertical">

    <EditText
        android:id="@+id/username_loginfm"
        android:layout_width="@dimen/width_edit_login"
        android:layout_height="@dimen/hight_edit_login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_edit_login"
        android:background="@color/white" />

    <EditText
        android:id="@+id/password_loginfm"
        android:layout_width="@dimen/width_edit_login"
        android:layout_height="@dimen/hight_edit_login"
        android:layout_below="@+id/username_loginfm"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_edit_login"
        android:background="@color/white" />

    <Button
        android:layout_width="@dimen/width_edit_login"
        android:layout_height="@dimen/hight_edit_login"
        android:layout_below="@+id/password_loginfm"
        android:layout_marginTop="@dimen/margin_edit_login"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:background="@color/red"
        android:textSize="25sp"
        android:text="@string/login_login"
        />
</RelativeLayout>